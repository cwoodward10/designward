---
    import Image from 'astro/components/Image.astro';

    import svelteLogo from '@assets/images/logos/svelte.png'
    import astroLogo from '@assets/images/logos/astro-mark-48.png'
---

<footer class="main-footer">
    <div class="content">
        <section class="logos-container">
            <p class="x-small">About the stack:</p>
            <div class="logos">
                <a href="https://astro.build//" target="#">
                    <Image height={24} src={astroLogo} alt="Astro Framework logo">
                </a>
                <a href="https://svelte.dev/" target="#">
                    <Image height={24} src={svelteLogo} alt="Svelte Framework logo">
                </a>
            </div>
            <a class="white x-small" href="https://github.com/cwoodward10/designward" target="#">
                See the repo
            </a>
        </section>
    
        <section class="links-container">
            <p class="x-small">Quick links:</p>
            <a 
                class="white x-small"
                href="https://www.linkedin.com/in/chris-woodward-8789b532/" 
                target="#"
            >
                LinkedIn
            </a>
            <a 
                class="white x-small"
                href="https://drive.google.com/file/d/1FMfZ0RHwd1AGZXMIAXn4cPiG5mS5fMAR/view?usp=sharing" 
                target="#"
            >
                Resume
            </a>
        </section>
    </div>
</footer>

<style>
    .main-footer {
        width: 100%;

        background-color: var(--color-background-dark);

        .content {
            margin: auto;
            padding: 3em var(--padding-edge) 6em;

            width: 1200px;
            max-width: calc(100% - 2*var(--padding-edge));

            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .logos-container, .links-container {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            gap: 0.75rem;
        }
        .links-container {
            align-items: flex-end;
        }

        .logos {
            display: flex;
            gap: 0.5rem;

            a {
                filter: grayscale(0.9);
                transition-property: filter, scale;
                transition-duration: 300ms;
                transition-timing-function: ease-out;
            }
            a:hover {
                filter: grayscale(0);
                scale: 1.1;
                transform-origin: 50% 100%;
            }
        }

        p, a {
            color: var(--color-offwhite);
        }
        a {
            animation: none;
            transition: color 300ms ease-out;

            &::after {
                width: 0%;
                right: 0;
                left: unset;
                transition: width 300ms ease-out;
            }
            &:hover {
                color: var(--color-secondary);

                &::after {
                    width: 100%;
                    left: 0;
                }
            }
        }
    }
</style>