---
import { Image } from "astro:assets";
interface Props {
  src: ImageMetadata | string;
  alt: string;
}
const { src, alt } = Astro.props;

const useHtmlImg = typeof src === 'string' || src.src.includes('.gif');
---
{
   useHtmlImg ? 
    <img class="content-image" src={typeof src === 'string' ? src : src.src } alt={alt} /> : 
    <Image class="content-image" src={src} alt={alt} width={960} />
}

<style>
  .content-image {
    object-fit: cover;
    height: auto;
    border-radius: var(--radius-image);
    overflow: hidden;
    filter: drop-shadow(var(--shadow-image));
  }
</style>